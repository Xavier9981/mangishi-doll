<div class="blog__card">
  <div class="blog__img">
    <figure>
      <img
        src="{{ post.data.image }}"
        alt="{{ post.data.imageAlt }}"
      />
    </figure>
  </div>
  <div class="blog__text">
    <h3 class="blog__title title">
      {{ post.data.title }}
    </h3>
    <p>
        <span></span> &hybull; <i class="posted">Posted on</i> {{ post.date | postDate }}
    </p>
    <p class="description">
      {{ post.data.description }}
    </p>
       <a
        class="regular__btn"
        href="{{ post.url }}"
        >Read post</a
      > 
  </div>
</div>